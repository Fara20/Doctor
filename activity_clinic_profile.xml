<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeebeb"
    android:orientation="vertical"
    tools:context=".ClinicProfile"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/login_title"
                android:layout_width="119dp"
                android:layout_height="116dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/profileshape"
                android:elevation="4dp"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:src="@drawable/clinic" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_title"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"

                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/heart"
                                android:gravity="left"
                                android:text="Name"
                                android:textColor="#b71c1c"
                                android:textSize="25dp"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Name1"
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:layout_weight="3"
                                android:width="150dp"
                                android:height="40dp"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:textColor="#b71c1c"
                                android:textSize="20dp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="50dp"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="139dp"
                                android:layout_height="55dp"
                                android:drawableLeft="@drawable/pills"
                                android:gravity="left"
                                android:text="Email"
                                android:textColor="#b71c1c"
                                android:textSize="25dp"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Email"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="3"
                                android:width="150dp"
                                android:height="40dp"
                                android:gravity="center"
                                android:inputType="textEmailAddress"
                                android:textColor="#b71c1c"
                                android:textSize="15dp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/bed"
                                android:drawableTint="#b71c1c"
                                android:gravity="left"
                                android:text="Phone"
                                android:textColor="#b71c1c"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Phone"
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:layout_weight="3"
                                android:width="150dp"
                                android:height="40dp"
                                android:gravity="center"
                                android:inputType="number"
                                android:textColor="#b71c1c"
                                android:textSize="20dp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="176dp"
                                android:layout_height="55dp"
                                android:drawableLeft="@drawable/pharmacy"
                                android:drawableTint="#b71c1c"
                                android:gravity="left"
                                android:text="Location"
                                android:textColor="#b71c1c"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:layout_weight="3"
                                android:width="150dp"
                                android:height="40dp"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:textColor="#b71c1c"
                                android:textSize="20dp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="176dp"
                                android:layout_height="55dp"
                                android:drawableLeft="@drawable/bandage"
                                android:drawableTint="#b71c1c"
                                android:gravity="left"
                                android:text="Type"
                                android:textColor="#b71c1c"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="176dp"
                                android:layout_height="50dp"
                                android:layout_weight="3"
                                android:width="150dp"
                                android:height="40dp"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:textColor="#b71c1c"
                                android:textSize="20dp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>





</RelativeLayout>